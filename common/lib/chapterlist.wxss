
.cpt-item{  
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.cpt-img{
  width: 20rpx;
  height: 20rpx;
  margin: 10rpx 30rpx 15rpx 20rpx ;
  border-radius: 100%;
  box-shadow: 0rpx 0rpx 0rpx 2rpx #555;
}

.cpt-opt{
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-end;
}
.cpt-opt image{
  width: 50rpx;
  height: 50rpx;
}

.cpt-content{
  flex-grow: 2;
}

.cpt-head{
  color: #696969;
  font-size: 30rpx;
  font-weight: bolder;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  letter-spacing: 5rpx;
}

.cpt-detail{
  padding: 15rpx 0rpx;
  border-bottom: 1rpx solid #eee;
}

.cpt-txt{
  font-size: 26rpx;
  color: #808080;
}

.cpt-item .cpt-space{
  margin-left: 30rpx; 
}