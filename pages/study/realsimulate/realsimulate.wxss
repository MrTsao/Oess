/* pages/tabbar/study/realsimulate/realsimulate.wxss */
@import "../../../common/lib/weui.wxss";

.addbatch {
  border: 1rpx solid #4682b4;
  height: 140rpx;
  line-height: 140rpx;
  margin: 10% auto;
  border-radius: 20rpx;
  text-align: center;
  background-color: #4682b4;
  box-shadow: 0 0 20rpx 1rpx #eee, 0 0 20rpx 1rpx #4682b4;
  display: flex;
  justify-content: center;
}

.addbatch .lbAdd {
  margin-right: 30rpx;
  font-size: 100rpx;
  color: #eee;
  text-shadow: 0 0 3px #ff8c00;
}

.addbatch .lbDesc {
  font-size: 36rpx;
  color: #ddd;
  text-shadow: 0 0 3px #228b22;
  vertical-align: middle;
  width: 100%;
}

.addbatch .lbDesc2 {
  font-size: 30rpx;
  color: #fff;
  text-shadow: 0 0 3px #228b22;
  vertical-align: bottom;
  line-height: 60rpx;
  padding: 0rpx 20rpx; 
}

.lbDescTip {
  font-size: 24rpx;
  color: #ddd;
  line-height: 40rpx;
}

.lbhead {
  color: #2f4f4f;
  font-size: 30rpx;
}

.batch-list {
  border: 1rpx solid #eee;
  width: 90%;
  margin: 2rpx auto;
  border-radius: 10rpx;
  color: #444;
  padding-top: 10rpx;
}

.batchItem {
  font-size: 26rpx;
  margin: 15rpx auto;
  width: 90%;
  border: 1rpx solid #8fad9c;
  border-radius: 10rpx;
  padding: 0 10rpx;
  background-color: #eed;
  box-shadow: 0 0 20rpx 1rpx #eee;
}

.itemno {
  margin-top: 10rpx;
  height: 40rpx;
}

.batchno {
  color: #2F4F4F;
}

.itemdetail {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}

.itemdetail view {
  margin-left: 27rpx;
}

.nobatch {
  font-size: 24rpx;
  color: #ddd;
  padding: 30rpx 0;
}

.vertical {
  display: flex;
  flex-direction: column;
}

.tips {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  font-size: 34rpx;
  color: #999;
}

.tips-content {
  font-size: 30rpx;
  text-indent: 40rpx;
  color: #a9a9a9;
  width: 100%;
}
.btn-area{
  margin-top: 60rpx;
}