/* pages/services/recommend.wxss */

.user {
  position: fixed;
  top: 20px;
  left: 30px;
  z-index: 4;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.user-img{
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.user-nme {
  color: #eee;
  font-weight: bold;
  padding: 25rpx 0;
}

.user image, .user button{
  width: 70px;
  height: 70px;
  border: 1rpx solid #eee;
  border-radius: 100%;
  font-size: 20rpx;
  text-align: center;
  line-height: 70px;
}

.user-bg {
  height: 200px;
  width: 100%;
  background: #c03;
  position: fixed;
  left: 10px;
  top: 60px;
  z-index: 3;
  border-radius: 20rpx;
}

.share-btn{
  position: fixed;
  bottom: 30%;
  width: 150px;
}