.main {
}

.user {
  position: fixed;
  top: 20px;
  left: 30px;
  z-index: 4;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-nme {
  color: #eee;
  font-weight: bold;
  padding: 20rpx 0;
}

.user image {
  width: 70px;
  height: 70px;
  border: 1rpx solid #eee;
  border-radius: 100%;
}

.user-bg {
  height: 200px;
  width: 100%;
  background: #c03;
  position: fixed;
  left: 0;
  top: 60px;
  z-index: 3;
  border-radius: 20rpx;
}

.bg {
  height: 80px;
  position: fixed;
  left: 0;
  top: 200px;
  z-index: 3;
}

.share-btn{
  position: fixed;
  bottom: 30%;
  width: 150px;
}