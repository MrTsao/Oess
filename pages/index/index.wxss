/**index.wxss**/
@import "../../common/lib/chapterlist.wxss";
.fun-list{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:center;
  color: #808080;
}

.item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 10rpx;
  align-items: center;
}

.item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  border: 1rpx solid #4682B4;
}

.item-image image {
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx 20rpx;
}

.item-txt {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}


swiper {
  height: 200rpx;
  width: 100%;
  letter-spacing: 5rpx;
}

.swiper-item {
  height: 200rpx;
  width: 100%;
}


