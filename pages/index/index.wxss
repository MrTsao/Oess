/**index.wxss**/
.fun-list{
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content:center;
  color: #808080;
}

.item {
  display: flex;
  flex-direction: column;
  padding: 20rpx 10rpx;
  align-items: center;
}

.item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  border: 1rpx solid #4682B4;
}

.item-image image {
  width: 60rpx;
  height: 60rpx;
  padding: 20rpx 20rpx;
}

.item-txt {
  font-size: 28rpx;
  padding: 10rpx 20rpx;
}


swiper {
  height: 200rpx;
  width: 101%;
  margin-left: -1rpx;
  letter-spacing: 5rpx;
}

.swiper-item {
  height: 200rpx;
  width: 100%;
}

.section-title{
  padding: 20rpx 30rpx;
  background-color: #F5F5F5;
  margin-left: -1rpx;
  border-bottom: 1rpx solid #ddd;
  color: #808080;
  font-size: 30rpx;
  letter-spacing: 5rpx;
}

.cpt-item{  
  border-bottom: 1rpx solid #ddd;
  padding: 20rpx 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.cpt-img{
  width: 20rpx;
  height: 20rpx;
  margin: 10rpx 30rpx 15rpx 20rpx ;
  border-radius: 20rpx;
  box-shadow: 0rpx 0rpx 0rpx 2rpx #555;
}

.cpt-opt{
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-end;
}
.cpt-opt image{
  width: 50rpx;
  height: 50rpx;
}

.cpt-content{
  flex-grow: 2;
}

.cpt-head{
  color: #696969;
  font-size: 30rpx;
  font-weight: bolder;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  letter-spacing: 5rpx;
}

.cpt-detail{
  padding: 15rpx 0rpx;
  border-bottom: 1rpx solid #eee;
}

.cpt-txt{
  font-size: 26rpx;
  color: #808080;
}

.cpt-item .cpt-space{
  margin-left: 30rpx; 
}
