<!--index.wxml-->
<import src="/common/chapterlist.wxml" />
<view class="container">
  <view class="fun-list">
    <block wx:for="{{showItems}}" wx:key="{{item.txt}}" >
      <navigator open-type="navigate" url="{{item.url}}" hover-class="none">
        <view class="item">
          <view class="item-image">
            <image src="{{item.img}}"></image>
          </view>
          <view class="item-txt">
            {{item.txt}}
          </view>
        </view>
      </navigator>
    </block>
  </view>
  <view class="page-section">
    <swiper indicator-dots="{{false}}" autoplay="true" circular="true" interval="5000" duration="500">
      <block wx:for="{{background}}" wx:key="item.id">
        <swiper-item>
          <image src="{{item.url}}" class="swiper-item" mode="center" />
        </swiper-item>
      </block>
    </swiper>
  </view>
  <template is="chapterlist" data="{{chapters: chapters,COLOR:COLOR}}" />
</view>