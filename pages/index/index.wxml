<!--index.wxml-->
<view class="container">
  <view class="fun-list">
    <block wx:for="{{showItems}}" wx:key="{{item.txt}}" >
      <navigator open-type="navigate" url="{{item.url}}" hover-class="none">
        <view class="item">
          <view class="item-image">
            <image src="{{item.img}}"></image>
          </view>
          <view class="item-txt">
            {{item.txt}}
          </view>
        </view>
      </navigator>
    </block>
  </view>
  <view class="page-section">
    <swiper indicator-dots="{{false}}" autoplay="true" circular="true" interval="5000" duration="500">
      <block wx:for="{{background}}" wx:key="item.id">
        <swiper-item>
          <image src="{{item.url}}" class="swiper-item" mode="center" />
        </swiper-item>
      </block>
    </swiper>
  </view>  
  <view class="page-section" hidden="{{hothide}}" >
    <view class="section-title">
      <view class="head">
        章节练习
      </view>
    </view>
    <block wx:for="{{chapters}}" wx:for-index="idx" wx:key="{{item.CPID}}">
      <navigator url="/pages/chapter?id={{item.CPID}}">
        <view class="cpt-item" style="border-color:{{COLOR[idx%COLOR.length]}};">
          <image class="cpt-img" src='/image/index-img/dot.png' style="background-color:{{COLOR[idx%COLOR.length]}};"></image>
          <view class="cpt-content">
            <view class="cpt-head">
              <text>{{item.CN0}}</text>
              <text class="cpt-space">{{item.CNME}}</text>
            </view>
            <view class="cpt-detail">
              <text class="cpt-txt">习题量：{{item.QCNT}}</text>
              <text class="cpt-txt cpt-space">练习量：{{item.UQCNT}}</text>
            </view>
          </view>
          <view class="cpt-opt">
            <image  src='/image/index-img/pen.png'></image>
          </view>
        </view>
      </navigator>
    </block>
  </view>
</view>